<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
                    xmlns:fm="clr-namespace:Framework.Models;assembly=Framework">
    <mct:EnumToBoolConverter x:Key="DirectionAscendingConverter">
        <mct:EnumToBoolConverter.TrueValues>
            <fm:QueryOrderDirections>Ascending</fm:QueryOrderDirections>
        </mct:EnumToBoolConverter.TrueValues>
    </mct:EnumToBoolConverter>
    <mct:EnumToBoolConverter x:Key="DirectionDescendingConverter">
        <mct:EnumToBoolConverter.TrueValues>
            <fm:QueryOrderDirections>Descending</fm:QueryOrderDirections>
        </mct:EnumToBoolConverter.TrueValues>
    </mct:EnumToBoolConverter>
</ResourceDictionary>