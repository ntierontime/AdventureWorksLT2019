<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AdventureWorksLT2019.MauiXApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:AdventureWorksLT2019.MauiXApp.ViewModels"
    xmlns:p="clr-namespace:AdventureWorksLT2019.MauiXApp.Pages"
    Shell.TabBarIsVisible="False">

    <ShellContent
        Title="Loading" FlyoutItemIsVisible="False" Shell.FlyoutBehavior="Disabled"
        ContentTemplate="{DataTemplate p:AppLoadingPage}"
        Route="AppLoadingPage" />
    
    <ShellContent
        Title="Login Page" FlyoutItemIsVisible="False" Shell.FlyoutBehavior="Disabled"
        ContentTemplate="{DataTemplate p:LogInPage}"
        Route="LogInPage" />

    <ShellContent
        Title="Register User Page" FlyoutItemIsVisible="False" Shell.FlyoutBehavior="Disabled"
        ContentTemplate="{DataTemplate p:RegisterUserPage}"
        Route="RegisterUserPage" />
    
</Shell>
