<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AdventureWorksLT2019.MauiXApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:l="clr-namespace:AdventureWorksLT2019.MauiXApp.Extensions"
    xmlns:vm="clr-namespace:AdventureWorksLT2019.MauiXApp.ViewModels"
    xmlns:v="clr-namespace:AdventureWorksLT2019.MauiXApp.Views"
    xmlns:cs="clr-namespace:AdventureWorksLT2019.MauiXApp.Common.Services"
    
    xmlns:vCustomer="clr-namespace:AdventureWorksLT2019.MauiXApp.Views.Customer"
    Shell.TabBarIsVisible="False">

    <ShellContent
        Title="{l:Localize Loading}" FlyoutItemIsVisible="False" Shell.FlyoutBehavior="Disabled"
        ContentTemplate="{DataTemplate v:AppLoadingPage}"
        Route="{x:Static cs:AppShellRoutes.AppLoadingPage}" />
    
    <ShellContent
        Title="{l:Localize LogIn}" FlyoutItemIsVisible="False" Shell.FlyoutBehavior="Disabled"
        ContentTemplate="{DataTemplate v:LogInPage}"
        Route="{x:Static cs:AppShellRoutes.LogInPage}" />

    <ShellContent
        Title="{l:Localize RegisterANewUser}" FlyoutItemIsVisible="False" Shell.FlyoutBehavior="Disabled"
        ContentTemplate="{DataTemplate v:RegisterUserPage}"
        Route="{x:Static cs:AppShellRoutes.RegisterUserPage}" />

</Shell>
