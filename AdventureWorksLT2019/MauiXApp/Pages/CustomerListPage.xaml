<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdventureWorksLT2019.MauiXApp.Pages.CustomerListPage"
             Title="CustomerListPage">
    <VerticalStackLayout>
        <SearchBar x:Name="searchBar" Placeholder=".NET MAUI property"
                   SearchCommand="{Binding Path=SearchCommand}" SearchCommandParameter="{Binding Text, Source={x:Reference searchBar}}" />

        <ScrollView VerticalOptions="FillAndExpand">
            <Label x:Name="resultsLabel" />
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>