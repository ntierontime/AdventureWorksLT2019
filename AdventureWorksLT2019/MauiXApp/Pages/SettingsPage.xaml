<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="clr-namespace:CommunityToolkit.Maui.Layouts;assembly=CommunityToolkit.Maui"
             x:Class="AdventureWorksLT2019.MauiXApp.Pages.SettingsPage"
             Title="SettingsPage">
    <VerticalStackLayout>
        <mct:UniformItemsLayout x:Name="UniformItemsLayout_Default" VerticalOptions="Start" MaxColumns="2">
            <Button Text="Skip" Command="{Binding Path=SkipCommand}" />
            <Button Text="Done" Command="{Binding Path=DoneCommand}"  />
        </mct:UniformItemsLayout>
    </VerticalStackLayout>
</ContentPage>