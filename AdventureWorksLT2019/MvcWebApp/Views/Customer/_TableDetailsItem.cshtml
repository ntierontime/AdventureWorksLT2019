@using Framework.Models;
@using AdventureWorksLT2019.Models;
@using AdventureWorksLT2019.Resx;
@using Framework.Mvc.Models;
@model MvcItemViewModel<CustomerDataModel>
@inject IUIStrings localizor;
@if (Model!.UIItemFeatures.ShowListBulkSelectCheckbox)
{
    <td class="pt-0 pb-0 nt-list-bulk-select" style="width: 1% !important;">
        <input class="form-check-input ms-1" type="checkbox" value="">
    </td>
}
@if (Model!.UIItemFeatures.ShowItemButtons)
{
    <td class="p-0" style="width: 1% !important;">
    <div class="btn-group-lg dropdown dropstart btn-group-nt-actions">
        <button class="btn btn-default btn-sm mt-0 mb-0 pt-0 pb-0" data-bs-toggle="dropdown" role="button" aria-expanded="false"><i class="fa-solid fa-ellipsis-vertical"></i></button>
        <ul class="dropdown-menu border-0 bg-light m-0 p-0">
            <li class="d-inline-block">
                <div class="btn-group" role="group" aria-label="Menu group">
                    @if(Model!.UIItemFeatures.CanGotoDashboard)
                    {
                        <a asp-area="" asp-controller="Customer" asp-action="Dashboard" asp-route-customerid="@Model!.Model!.CustomerID" class="btn btn-default" role="button" title="@localizor.Get("Dashboard")">
                            <i class="fa-solid fa-folder-tree"></i>
                        </a>
                    }
                    @if (Model!.UIItemFeatures.PrimayDetailsViewContainer == CrudViewContainers.StandaloneView)
                    {
                        <a asp-area="" asp-controller="Customer" asp-action="Details" asp-route-customerid="@Model!.Model!.CustomerID" class="btn btn-default" role="button" title="@localizor.Get("Details")">
                            <i class="fa fa-briefcase"></i>
                        </a>
                    }
                    @if (Model!.UIItemFeatures.PrimayDetailsViewContainer == CrudViewContainers.Dialog)
                    {
                        <button type="button" class="btn btn-default" data-bs-toggle="modal" data-bs-target="#crudActionDialog" title="@localizor.Get("Details")"
                            data-nt-action="@HttpMethods.Get"
                            data-nt-container="@CrudViewContainers.Dialog.ToString()"
                            data-nt-template="@ViewItemTemplates.Details.ToString()">
                            <i class="fa fa-briefcase"></i>
                        </button>
                    }
                    @if (Model!.UIItemFeatures.PrimayEditViewContainer == CrudViewContainers.StandaloneView)
                    {
                        <a asp-area="" asp-controller="Customer" asp-action="Edit" asp-route-customerid="@Model!.Model!.CustomerID" class="btn btn-default" role="button" title="@localizor.Get("Edit")">
                            <i class="fa fa-edit"></i>
                        </a>
                    }
                    @if (Model!.UIItemFeatures.PrimayEditViewContainer == CrudViewContainers.Dialog)
                    {
                        <button type="button" class="btn btn-default" data-bs-toggle="modal" data-bs-target="#crudActionDialog" title="@localizor.Get("Edit")"
                            data-nt-action="@HttpMethods.Put"
                            data-nt-container="@CrudViewContainers.Dialog.ToString()"
                            data-nt-template="@ViewItemTemplates.Edit.ToString()">
                            <i class="fa fa-edit"></i>
                        </button>
                    }
                    @if (Model!.UIItemFeatures.PrimayEditViewContainer == CrudViewContainers.Inline)
                    {
                        <button type="button" class="btn btn-default btn-nt-inline-editing" title="@localizor.Get("Edit")"
                            data-nt-action="@HttpMethods.Put"
                            data-nt-container="@CrudViewContainers.Inline.ToString()"
                            data-nt-template="@ViewItemTemplates.Edit.ToString()">
                            <i class="fa fa-edit"></i>
                        </button>
                    }
                    @if (Model!.UIItemFeatures.PrimayDeleteViewContainer == CrudViewContainers.StandaloneView)
                    {
                        <a asp-area="" asp-controller="Customer" asp-action="Delete" asp-route-customerid="@Model!.Model!.CustomerID" class="btn btn-default" role="button" title="@localizor.Get("Delete")">
                            <i class="fa fa-trash"></i>
                        </a>
                    }
                    @if (Model!.UIItemFeatures.PrimayDeleteViewContainer == CrudViewContainers.Dialog)
                    {
                        <button type="button" class="btn btn-default" data-bs-toggle="modal" data-bs-target="#crudActionDialog" title="@localizor.Get("Delete")"
                            data-nt-action="@HttpMethods.Delete"
                            data-nt-container="@CrudViewContainers.Dialog.ToString()"
                            data-nt-template="@ViewItemTemplates.Delete.ToString()">
                            <i class="fa fa-trash"></i>
                        </button>
                    }
                    @if (Model!.UIItemFeatures.PrimayDeleteViewContainer == @CrudViewContainers.Inline)
                    {
                        <button type="button" class="btn btn-default btn-nt-inline-editing" title="@localizor.Get("Delete")"
                            data-nt-action="@HttpMethods.Delete"
                            data-nt-container="@CrudViewContainers.Inline.ToString()"
                            data-nt-template="@ViewItemTemplates.Delete.ToString()">
                            <i class="fa fa-trash"></i>
                        </button>
                    }
                </div>
            </li>
        </ul>
    </div>
    </td>
}
<td class="pt-0 pb-0">
    @Html.DisplayFor(m=>m.Model!.CustomerID)
</td>
<td class="pt-0 pb-0">
    @Html.DisplayFor(m=>m.Model!.NameStyle)
</td>
<td class="pt-0 pb-0">
    @Html.DisplayFor(m=>m.Model!.Title)
</td>
