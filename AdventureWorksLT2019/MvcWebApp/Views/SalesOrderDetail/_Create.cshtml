@using Framework.Common;
@using AdventureWorksLT2019.Models.Definitions;
@using AdventureWorksLT2019.MvcWebApp.Models;
@using Framework.Mvc.Models;
@using AdventureWorksLT2019.Models;
@using AdventureWorksLT2019.Resx;
@model MvcItemViewModel<SalesOrderDetailDataModel.DefaultView>
@inject SelectListHelper selectListHelper;
@inject IUIStrings localizor;
@{
    var format_Please_Select = localizor.Get("Format_Please_Select");
}
@if (Model.Status != System.Net.HttpStatusCode.OK)
{
    <div class="row">
        <div class="text-danger">@Model.StatusMessage</div>
    </div>
}
else
{
    <input class="nt-hidden-modal-title" value="@Model!.Model!.Product_Name" type="hidden" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Model!.SalesOrderID" class="control-label" for="@Model!.HtmlId(nameof(SalesOrderDetailDataModel.DefaultView.SalesOrderID))"></label>
        <select asp-for="Model!.SalesOrderID" class="form-control form-select nt-form-data"
            data-nt-value="@Model!.Model!.SalesOrderID" id="@Model!.HtmlId(nameof(SalesOrderDetailDataModel.DefaultView.SalesOrderID))"  name="@Model!.HtmlName(nameof(SalesOrderDetailDataModel.DefaultView.SalesOrderID))">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Model!.OrderQty" class="control-label" for="@Model!.HtmlId(nameof(SalesOrderDetailDataModel.DefaultView.OrderQty))"></label>
        <input asp-for="Model!.OrderQty" class="form-control nt-form-data" id="@Model!.HtmlId(nameof(SalesOrderDetailDataModel.DefaultView.OrderQty))" name="@Model!.HtmlName(nameof(SalesOrderDetailDataModel.DefaultView.OrderQty))" data-nt-value="@Model!.Model!.OrderQty"/>
        <span asp-validation-for="Model!.OrderQty" class="text-danger" data-valmsg-for="@Model!.HtmlName(nameof(SalesOrderDetailDataModel.DefaultView.OrderQty))"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model!.ProductID" class="control-label" for="@Model!.HtmlId(nameof(SalesOrderDetailDataModel.DefaultView.ProductID))"></label>
        <select asp-for="Model!.ProductID" class="form-control form-select nt-form-data"
            data-nt-value="@Model!.Model!.ProductID" id="@Model!.HtmlId(nameof(SalesOrderDetailDataModel.DefaultView.ProductID))"  name="@Model!.HtmlName(nameof(SalesOrderDetailDataModel.DefaultView.ProductID))">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Model!.UnitPrice" class="control-label" for="@Model!.HtmlId(nameof(SalesOrderDetailDataModel.DefaultView.UnitPrice))"></label>
        <input asp-for="Model!.UnitPrice" class="form-control nt-form-data" id="@Model!.HtmlId(nameof(SalesOrderDetailDataModel.DefaultView.UnitPrice))" name="@Model!.HtmlName(nameof(SalesOrderDetailDataModel.DefaultView.UnitPrice))" data-nt-value="@Model!.Model!.UnitPrice"/>
        <span asp-validation-for="Model!.UnitPrice" class="text-danger" data-valmsg-for="@Model!.HtmlName(nameof(SalesOrderDetailDataModel.DefaultView.UnitPrice))"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model!.UnitPriceDiscount" class="control-label" for="@Model!.HtmlId(nameof(SalesOrderDetailDataModel.DefaultView.UnitPriceDiscount))"></label>
        <input asp-for="Model!.UnitPriceDiscount" class="form-control nt-form-data" id="@Model!.HtmlId(nameof(SalesOrderDetailDataModel.DefaultView.UnitPriceDiscount))" name="@Model!.HtmlName(nameof(SalesOrderDetailDataModel.DefaultView.UnitPriceDiscount))" data-nt-value="@Model!.Model!.UnitPriceDiscount"/>
        <span asp-validation-for="Model!.UnitPriceDiscount" class="text-danger" data-valmsg-for="@Model!.HtmlName(nameof(SalesOrderDetailDataModel.DefaultView.UnitPriceDiscount))"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model!.ModifiedDate" class="control-label" for="@Model!.HtmlId(nameof(SalesOrderDetailDataModel.DefaultView.ModifiedDate))"></label>
        <input asp-for="Model!.ModifiedDate" class="form-control nt-form-data" id="@Model!.HtmlId(nameof(SalesOrderDetailDataModel.DefaultView.ModifiedDate))" name="@Model!.HtmlName(nameof(SalesOrderDetailDataModel.DefaultView.ModifiedDate))" data-nt-value="@Model!.Model!.ModifiedDate"/>
        <span asp-validation-for="Model!.ModifiedDate" class="text-danger" data-valmsg-for="@Model!.HtmlName(nameof(SalesOrderDetailDataModel.DefaultView.ModifiedDate))"></span>
    </div>
}
