@using AdventureWorksLT2019.Models;
@using AdventureWorksLT2019.Resx;
@using Framework.Models;
@using AdventureWorksLT2019.Models.Definitions;
@using AdventureWorksLT2019.MvcWebApp.Models;
@model PagedSearchViewModel<SalesOrderDetailAdvancedQuery, SalesOrderDetailDataModel.DefaultView[]>
@inject IHttpContextAccessor Accessor
@inject SelectListHelper selectListHelper;
@inject IUIStrings localizor;
@{
    ViewData["Title"] = @localizor.Get("Search") + " " + localizor.Get("SalesOrderDetail");
    var format_All = localizor.Get("Format_All");
    string currentView = string.Empty;
    if (Accessor.HttpContext != null)
    {
        currentView = Accessor.HttpContext.Request.Query["PagedViewOption"];
    }
    if (string.IsNullOrEmpty(currentView))
    {
        currentView = (Model.UIListSetting.UIParams.PagedViewOption ?? PagedViewOptions.Card).ToString();
    }
}
<form id="@Model!.UIListSetting.UIListFeatures.SearchFormId" method="post" class="nt-ajax-partial-load-post-formdata"
    data-nt-partial-url="@Url.Action("AjaxLoadItems", "SalesOrderDetail")"
    data-nt-updatetarget="#@Model!.UIListSetting.UIListFeatures.ListWrapperId">
    <input type="hidden" asp-for="Query.PageIndex" class="nt-page-index" />
    <input type="hidden" asp-for="Query.PageSize" class="nt-page-size" />
    <input type="hidden" asp-for="Query.OrderBys" class="nt-order-by" />
    <input type="hidden" asp-for="Query.PaginationOption" class="nt-pagination-option-field" />
    <input type="hidden" asp-for="UIListSetting.UIParams.AdvancedQuery" class="nt-advanced-query" iname="AdvancedQuery" />
    <input type="hidden" asp-for="UIListSetting.UIParams.PagedViewOption" class="nt-paged-view-option-field" value="@currentView" name="PagedViewOption" />
    <input type="hidden" asp-for="UIListSetting.UIParams.Template" class="nt-template-field" name="Template" />
    <div class="d-flex justify-content-between pt-1">
        <div>
            <span class="h5"><a class="nav-link text-dark" asp-area="" asp-controller="SalesOrderDetail" asp-action="Index">you are working on <strong>@localizor.Get("SalesOrderDetail")</strong></a></span>
        </div>
        <button class="btn btn-primary me-1 ms-1" role="button" type="submit" title="@localizor.Get("Search")">
            <i class="fa fa-search"></i>
            @localizor.Get("Search")
        </button>
    </div>
    <hr class="mt-1" />
    <div class="row pt-1">
        <div class="col-lg-6">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("ModifiedDateRange")</label>
                <select asp-for="Query.ModifiedDateRange" asp-items="@selectListHelper.GetSelectList(Model!.OtherDropDownLists[nameof(SalesOrderDetailAdvancedQuery.ModifiedDateRange)])" class="form-control form-select nt-datetime-predefinedrange"></select>
                <input asp-for="Query.ModifiedDateRangeLower" class="form-control" readonly />
                <input asp-for="Query.ModifiedDateRangeUpper" class="form-control" readonly />
            </div>
        </div>
    </div>
    <div class="row pt-1">
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("Address")</label>
                <select asp-for="Query.ShipToID" class="form-control form-select nt-ddlcascading" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[TopLevelDropDownLists.Address.ToString()])"data-childlisturl="@Url.Action("GetSalesOrderHeaderCodeList","SelectListsApi")" data-nt-queryparamname="shipToAddressID" data-nt-targetchild="Query.SalesOrderID">
                    <option value="" selected>@string.Format(format_All, localizor.Get("Address"))</option>
                </select>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("Customer")</label>
                <select asp-for="Query.CustomerID" class="form-control form-select nt-ddlcascading" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[TopLevelDropDownLists.Customer.ToString()])"data-childlisturl="@Url.Action("GetSalesOrderHeaderCodeList","SelectListsApi")" data-nt-queryparamname="customerID" data-nt-targetchild="Query.SalesOrderID">
                    <option value="" selected>@string.Format(format_All, localizor.Get("Customer"))</option>
                </select>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("Address")</label>
                <select asp-for="Query.BillToID" class="form-control form-select nt-ddlcascading" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[TopLevelDropDownLists.Address.ToString()])"data-childlisturl="@Url.Action("GetSalesOrderHeaderCodeList","SelectListsApi")" data-nt-queryparamname="billToAddressID" data-nt-targetchild="Query.SalesOrderID">
                    <option value="" selected>@string.Format(format_All, localizor.Get("Address"))</option>
                </select>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("SalesOrderHeader")</label>
                <select asp-for="Query.SalesOrderID" class="form-control form-select" >
                    <option value="" selected>@string.Format(format_All, localizor.Get("SalesOrderHeader"))</option>
                </select>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("ProductModel")</label>
                <select asp-for="Query.ProductModelID" class="form-control form-select nt-ddlcascading" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[TopLevelDropDownLists.ProductModel.ToString()])"data-childlisturl="@Url.Action("GetProductCodeList","SelectListsApi")" data-nt-queryparamname="productModelID" data-nt-targetchild="Query.ProductID">
                    <option value="" selected>@string.Format(format_All, localizor.Get("ProductModel"))</option>
                </select>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("ProductCategory")</label>
                <select asp-for="Query.ProductCategory_ParentID" class="form-control form-select nt-ddlcascading" data-childlisturl="@Url.Action("GetProductCategoryCodeList","SelectListsApi")" data-nt-queryparamname="parentProductCategoryID" data-nt-targetchild="Query.ProductCategoryID">
                    <option value="" selected>@string.Format(format_All, localizor.Get("ProductCategory"))</option>
                </select>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("ProductCategory")</label>
                <select asp-for="Query.ProductCategoryID" class="form-control form-select nt-ddlcascading" data-childlisturl="@Url.Action("GetProductCodeList","SelectListsApi")" data-nt-queryparamname="productCategoryID" data-nt-targetchild="Query.ProductID">
                    <option value="" selected>@string.Format(format_All, localizor.Get("ProductCategory"))</option>
                </select>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("Product")</label>
                <select asp-for="Query.ProductID" class="form-control form-select" >
                    <option value="" selected>@string.Format(format_All, localizor.Get("Product"))</option>
                </select>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-between pt-1">
        <div>
            <span class="h5"><a class="nav-link text-dark" asp-area="" asp-controller="SalesOrderDetail" asp-action="Index">you are working on <strong>@localizor.Get("SalesOrderDetail")</strong></a></span>
        </div>
        <button class="btn btn-primary me-1 ms-1" role="button" type="submit" title="@localizor.Get("Search")">
            <i class="fa fa-search"></i>
            @localizor.Get("Search")
        </button>
    </div>
</form>
<hr class="mt-1" />
@await Html.PartialAsync("~/Views/SalesOrderDetail/_ListViewsContainer.cshtml", Model)
<partial name="~/Views/Shared/_CrudActionDialog.cshtml" />
<partial name="~/Views/Shared/_SimpleActionConfirmationDialog.cshtml" />
@section Scripts
{
    <script>
        const searchFormId = "@Model.UIListSetting.UIListFeatures.SearchFormId";
        const listWrapperId = "@Model.UIListSetting.UIListFeatures.ListWrapperId";
        $(document).ready($(function() {
            documentReadyForSearchList(searchFormId, listWrapperId);
            documentReadyForPopups(true, true, true);
        }))
    </script>
}
