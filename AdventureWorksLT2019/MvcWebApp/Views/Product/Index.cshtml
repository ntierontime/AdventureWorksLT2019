@using AdventureWorksLT2019.Models;
@using AdventureWorksLT2019.Resx;
@using Framework.Mvc.Models;
@using Framework.Models;
@using AdventureWorksLT2019.Models.Definitions;
@using AdventureWorksLT2019.MvcWebApp.Models;
@model ListSearchViewModel<ProductAdvancedQuery, ProductDataModel.DefaultView[]>
@inject IHttpContextAccessor Accessor
@inject SelectListHelper selectListHelper;
@inject IUIStrings localizor;
@{
    ViewData["Title"] = @localizor.Get("Search") + " " + localizor.Get("Product");
    var format_All = localizor.Get("Format_All");
    string currentView = string.Empty;
    if (Accessor.HttpContext != null)
    {
        currentView = Accessor.HttpContext.Request.Query["PagedViewOption"];
    }
    if (string.IsNullOrEmpty(currentView))
    {
        currentView = (Model.UIListSetting.UIParams.PagedViewOption ?? ListViewOptions.Table).ToString();
    }
}
<form id="@Model!.UIListSetting.UIListFeatures.SearchFormId" method="post" class="nt-ajax-partial-load-post-formdata"
    data-nt-partial-url="@Url.Action("AjaxLoadItems", "Product")"
    data-nt-updatetarget="#@Model!.UIListSetting.UIListFeatures.ListWrapperId">
    <input type="hidden" asp-for="Query.PageIndex" class="nt-page-index" />
    <input type="hidden" asp-for="Query.PageSize" class="nt-page-size" />
    <input type="hidden" asp-for="Query.OrderBys" class="nt-order-by" />
    <input type="hidden" asp-for="Query.PaginationOption" class="nt-pagination-option-field" />
    <input type="hidden" asp-for="UIListSetting.UIParams.AdvancedQuery" class="nt-advanced-query" iname="AdvancedQuery" />
    <input type="hidden" asp-for="UIListSetting.UIParams.PagedViewOption" class="nt-paged-view-option-field" value="@currentView" name="PagedViewOption" />
    <input type="hidden" asp-for="UIListSetting.UIParams.Template" class="nt-template-field" name="Template" />
    <div class="d-flex justify-content-between pt-1">
        <div>
            <span class="h5"><a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">you are working on <strong>@localizor.Get("Product")</strong></a></span>
        </div>
        <a class="btn btn-secondary nt-advanced-search-button" role="button" title="@localizor.Get("AdvancedSearch")" data-bs-toggle="collapse" data-bs-target=".nt-advanced-search-field" aria-expanded="@(Model!.UIListSetting.UIParams.AdvancedQuery.ToString().ToLower())" aria-controls="advancedsearch-seperator advancedsearch-select advancedsearch-text" data-updatetarget="#advancedQueryH">
            <i class="fa-solid fa-circle-chevron-up advanced-search-expanded"></i>
            <span class="advanced-search-expanded">@localizor.Get("HideAdvancedSearch")</span>
            <i class="fa-solid fa-circle-chevron-down advanced-search-collapsed"></i>
            <span class="advanced-search-collapsed">@localizor.Get("ShowAdvancedSearch")</span>
        </a>
        <button class="btn btn-primary me-1 ms-1" role="button" type="submit" title="@localizor.Get("Search")">
            <i class="fa fa-search"></i>
            @localizor.Get("Search")
        </button>
    </div>
    <hr class="mt-1" />
    <div class="input-group">
        <select asp-for="Query.TextSearchType" asp-items="@selectListHelper.GetSelectList(Model!.TextSearchTypeList)" class="input-group-text text-start">
        </select>
        <input asp-for="Query.TextSearch" class="form-control" placeholder="@localizor.Get("SearchTextDescription")" aria-label="@localizor.Get("SearchTextDescription")" />
    </div>
    <div class="row pt-1">
        <div class="col-lg-6">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("SellStartDateRange")</label>
                <select asp-for="Query.SellStartDateRange" asp-items="@selectListHelper.GetSelectList(Model!.OtherDropDownLists[nameof(ProductAdvancedQuery.SellStartDateRange)])" class="form-control form-select nt-datetime-predefinedrange"></select>
                <input asp-for="Query.SellStartDateRangeLower" class="form-control" readonly />
                <input asp-for="Query.SellStartDateRangeUpper" class="form-control" readonly />
            </div>
        </div>
        <div class="col-lg-6">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("SellEndDateRange")</label>
                <select asp-for="Query.SellEndDateRange" asp-items="@selectListHelper.GetSelectList(Model!.OtherDropDownLists[nameof(ProductAdvancedQuery.SellEndDateRange)])" class="form-control form-select nt-datetime-predefinedrange"></select>
                <input asp-for="Query.SellEndDateRangeLower" class="form-control" readonly />
                <input asp-for="Query.SellEndDateRangeUpper" class="form-control" readonly />
            </div>
        </div>
        <div class="col-lg-6">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("DiscontinuedDateRange")</label>
                <select asp-for="Query.DiscontinuedDateRange" asp-items="@selectListHelper.GetSelectList(Model!.OtherDropDownLists[nameof(ProductAdvancedQuery.DiscontinuedDateRange)])" class="form-control form-select nt-datetime-predefinedrange"></select>
                <input asp-for="Query.DiscontinuedDateRangeLower" class="form-control" readonly />
                <input asp-for="Query.DiscontinuedDateRangeUpper" class="form-control" readonly />
            </div>
        </div>
        <div class="col-lg-6">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("ModifiedDateRange")</label>
                <select asp-for="Query.ModifiedDateRange" asp-items="@selectListHelper.GetSelectList(Model!.OtherDropDownLists[nameof(ProductAdvancedQuery.ModifiedDateRange)])" class="form-control form-select nt-datetime-predefinedrange"></select>
                <input asp-for="Query.ModifiedDateRangeLower" class="form-control" readonly />
                <input asp-for="Query.ModifiedDateRangeUpper" class="form-control" readonly />
            </div>
        </div>
    </div>
    <div class="collapse nt-advanced-search-field pt-3 pb-3" id="advancedsearch-seperator">
        <div style="width: 100%; height: 15px; border-bottom: 1px solid black; text-align: center">
            <span class="bg-light ps-4 pe-4">
                @localizor.Get("AdvancedSearch")<!--Padding is optional-->
            </span>
        </div>
    </div>
    <div class="row pt-1 collapse nt-advanced-search-field" id="advancedsearch-select">
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("ProductModel")</label>
                <select asp-for="Query.ProductModelID" class="form-control form-select" asp-items="@selectListHelper.GetSelectList(Model?.TopLevelDropDownListsFromDatabase?[TopLevelDropDownLists.ProductModel.ToString()])">
                    <option value="" selected>@string.Format(format_All, localizor.Get("ProductModel"))</option>
                </select>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("ProductCategory")</label>
                <select asp-for="Query.ParentID" class="form-control form-select nt-ddlcascading" data-childlisturl="@Url.Action("GetProductCategoryCodeList","SelectListsApi")" data-nt-queryparamname="parentProductCategoryID" data-nt-targetchild="Query.ProductCategoryID">
                    <option value="" selected>@string.Format(format_All, localizor.Get("ProductCategory"))</option>
                </select>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("ProductCategory")</label>
                <select asp-for="Query.ProductCategoryID" class="form-control form-select" >
                    <option value="" selected>@string.Format(format_All, localizor.Get("ProductCategory"))</option>
                </select>
            </div>
        </div>
    </div>
    <div class="row pt-1 collapse nt-advanced-search-field" id="advancedsearch-text">
        <div class="col-md-6">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("Name")</label>
                <select asp-for="Query.NameSearchType" asp-items="@selectListHelper.GetSelectList(Model!.TextSearchTypeList)" class="input-group-text text-start">
                </select>
                <input asp-for="Query.Name" class="form-control" placeholder="@string.Format(@localizor.Get("Format_SearchTextDescription"), @localizor.Get("Name"))" aria-label="@string.Format(@localizor.Get("Format_SearchTextDescription"), @localizor.Get("Name"))" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("ProductNumber")</label>
                <select asp-for="Query.ProductNumberSearchType" asp-items="@selectListHelper.GetSelectList(Model!.TextSearchTypeList)" class="input-group-text text-start">
                </select>
                <input asp-for="Query.ProductNumber" class="form-control" placeholder="@string.Format(@localizor.Get("Format_SearchTextDescription"), @localizor.Get("ProductNumber"))" aria-label="@string.Format(@localizor.Get("Format_SearchTextDescription"), @localizor.Get("ProductNumber"))" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("Color")</label>
                <select asp-for="Query.ColorSearchType" asp-items="@selectListHelper.GetSelectList(Model!.TextSearchTypeList)" class="input-group-text text-start">
                </select>
                <input asp-for="Query.Color" class="form-control" placeholder="@string.Format(@localizor.Get("Format_SearchTextDescription"), @localizor.Get("Color"))" aria-label="@string.Format(@localizor.Get("Format_SearchTextDescription"), @localizor.Get("Color"))" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("Size")</label>
                <select asp-for="Query.SizeSearchType" asp-items="@selectListHelper.GetSelectList(Model!.TextSearchTypeList)" class="input-group-text text-start">
                </select>
                <input asp-for="Query.Size" class="form-control" placeholder="@string.Format(@localizor.Get("Format_SearchTextDescription"), @localizor.Get("Size"))" aria-label="@string.Format(@localizor.Get("Format_SearchTextDescription"), @localizor.Get("Size"))" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="input-group">
                <label class="input-group-text">@localizor.Get("ThumbnailPhotoFileName")</label>
                <select asp-for="Query.ThumbnailPhotoFileNameSearchType" asp-items="@selectListHelper.GetSelectList(Model!.TextSearchTypeList)" class="input-group-text text-start">
                </select>
                <input asp-for="Query.ThumbnailPhotoFileName" class="form-control" placeholder="@string.Format(@localizor.Get("Format_SearchTextDescription"), @localizor.Get("ThumbnailPhotoFileName"))" aria-label="@string.Format(@localizor.Get("Format_SearchTextDescription"), @localizor.Get("ThumbnailPhotoFileName"))" />
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-between pt-1">
        <div>
            <span class="h5"><a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">you are working on <strong>@localizor.Get("Product")</strong></a></span>
        </div>
        <a class="btn btn-secondary nt-advanced-search-button" role="button" title="@localizor.Get("AdvancedSearch")" data-bs-toggle="collapse" data-bs-target=".nt-advanced-search-field" aria-expanded="@(Model!.UIListSetting.UIParams.AdvancedQuery.ToString().ToLower())" aria-controls="advancedsearch-seperator advancedsearch-select advancedsearch-text" data-updatetarget="#advancedQueryH">
            <i class="fa-solid fa-circle-chevron-up advanced-search-expanded"></i>
            <span class="advanced-search-expanded">@localizor.Get("HideAdvancedSearch")</span>
            <i class="fa-solid fa-circle-chevron-down advanced-search-collapsed"></i>
            <span class="advanced-search-collapsed">@localizor.Get("ShowAdvancedSearch")</span>
        </a>
        <button class="btn btn-primary me-1 ms-1" role="button" type="submit" title="@localizor.Get("Search")">
            <i class="fa fa-search"></i>
            @localizor.Get("Search")
        </button>
    </div>
</form>
<hr class="mt-1" />
@await Html.PartialAsync("~/Views/Product/_ListViewsContainer.cshtml", Model)
<partial name="~/Views/Shared/_CrudActionDialog.cshtml" />
<partial name="~/Views/Shared/_SimpleActionConfirmationDialog.cshtml" />
@section Scripts
{
    <script>
        const searchFormId = "@Model.UIListSetting.UIListFeatures.SearchFormId";
        const listWrapperId = "@Model.UIListSetting.UIListFeatures.ListWrapperId";
        $(document).ready($(function() {
            documentReadyForSearchList(searchFormId, listWrapperId);
            documentReadyForPopups(true, true, true);
        }))
    </script>
}
