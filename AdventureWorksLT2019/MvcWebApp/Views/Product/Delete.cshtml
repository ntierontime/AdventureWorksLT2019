@using AdventureWorksLT2019.Models.Definitions;
@using AdventureWorksLT2019.MvcWebApp.Models;
@using AdventureWorksLT2019.Models;
@using AdventureWorksLT2019.Resx;
@model MvcItemViewModel<ProductDataModel.DefaultView>
@inject SelectListHelper selectListHelper;
@inject IUIStrings localizor;
@{
    ViewData["Title"] = localizor.Get("Delete");
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h1>@localizor.Get("Delete")</h1>
                <h4>@localizor.Get("Product")</h4>
                <h3>@localizor.Get("Are_you_sure_you_want_to_delete_this_")</h3>
            </div>
            @if (Model.Status != System.Net.HttpStatusCode.OK)
            {
                <div class="card-body">
                    <div class="text-danger">@Model.StatusMessage</div>
                </div>
            }
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Model!.ProductID" class="control-label" for="@Model!.HtmlId(nameof(ProductDataModel.DefaultView.ProductID))"></label>
                    @Html.DisplayFor(m=>m.Model!.ProductID)
                </div>
                <div class="form-group">
                    <label asp-for="Model!.Name" class="control-label" for="@Model!.HtmlId(nameof(ProductDataModel.DefaultView.Name))"></label>
                    @Html.DisplayFor(m=>m.Model!.Name)
                </div>
                <div class="form-group">
                    <label asp-for="Model!.ProductNumber" class="control-label" for="@Model!.HtmlId(nameof(ProductDataModel.DefaultView.ProductNumber))"></label>
                    @Html.DisplayFor(m=>m.Model!.ProductNumber)
                </div>
                <div class="form-group">
                    <label asp-for="Model!.Color" class="control-label" for="@Model!.HtmlId(nameof(ProductDataModel.DefaultView.Color))"></label>
                    @Html.DisplayFor(m=>m.Model!.Color)
                </div>
                <div class="form-group">
                    <label asp-for="Model!.StandardCost" class="control-label" for="@Model!.HtmlId(nameof(ProductDataModel.DefaultView.StandardCost))"></label>
                    @Html.DisplayFor(m=>m.Model!.StandardCost)
                </div>
                <div class="form-group">
                    <label asp-for="Model!.ListPrice" class="control-label" for="@Model!.HtmlId(nameof(ProductDataModel.DefaultView.ListPrice))"></label>
                    @Html.DisplayFor(m=>m.Model!.ListPrice)
                </div>
                <div class="form-group">
                    <label asp-for="Model!.Size" class="control-label" for="@Model!.HtmlId(nameof(ProductDataModel.DefaultView.Size))"></label>
                    @Html.DisplayFor(m=>m.Model!.Size)
                </div>
                <div class="form-group">
                    <label asp-for="Model!.Weight" class="control-label" for="@Model!.HtmlId(nameof(ProductDataModel.DefaultView.Weight))"></label>
                    @Html.DisplayFor(m=>m.Model!.Weight)
                </div>
                <div class="form-group">
                    <label asp-for="Model!.ProductCategoryID" class="control-label" for="@Model!.HtmlId(nameof(ProductDataModel.DefaultView.ProductCategoryID))"></label>
                    <a asp-area="" asp-controller="ProductCategory" asp-action="Dashboard" asp-route-productcategoryid="@Model!.Model!.ProductCategoryID">@Model!.Model!.ProductCategory_Name</a>
                </div>
                <div class="form-group">
                    <label asp-for="Model!.ProductModelID" class="control-label" for="@Model!.HtmlId(nameof(ProductDataModel.DefaultView.ProductModelID))"></label>
                    <a asp-area="" asp-controller="ProductModel" asp-action="Dashboard" asp-route-productmodelid="@Model!.Model!.ProductModelID">@Model!.Model!.ProductModel_Name</a>
                </div>
                <div class="form-group">
                    <label asp-for="Model!.SellStartDate" class="control-label" for="@Model!.HtmlId(nameof(ProductDataModel.DefaultView.SellStartDate))"></label>
                    @Html.DisplayFor(m=>m.Model!.SellStartDate)
                </div>
                <div class="form-group">
                    <label asp-for="Model!.SellEndDate" class="control-label" for="@Model!.HtmlId(nameof(ProductDataModel.DefaultView.SellEndDate))"></label>
                    @Html.DisplayFor(m=>m.Model!.SellEndDate)
                </div>
                <div class="form-group">
                    <label asp-for="Model!.DiscontinuedDate" class="control-label" for="@Model!.HtmlId(nameof(ProductDataModel.DefaultView.DiscontinuedDate))"></label>
                    @Html.DisplayFor(m=>m.Model!.DiscontinuedDate)
                </div>
                <div class="form-group">
                    <label asp-for="Model!.ThumbNailPhoto" class="control-label" for="@Model!.HtmlId(nameof(ProductDataModel.DefaultView.ThumbNailPhoto))"></label>
                    @Html.DisplayFor(m=>m.Model!.ThumbNailPhoto)
                </div>
                <div class="form-group">
                    <label asp-for="Model!.ThumbnailPhotoFileName" class="control-label" for="@Model!.HtmlId(nameof(ProductDataModel.DefaultView.ThumbnailPhotoFileName))"></label>
                    @Html.DisplayFor(m=>m.Model!.ThumbnailPhotoFileName)
                </div>
                <div class="form-group">
                    <label asp-for="Model!.rowguid" class="control-label" for="@Model!.HtmlId(nameof(ProductDataModel.DefaultView.rowguid))"></label>
                    @Html.DisplayFor(m=>m.Model!.rowguid)
                </div>
                <div class="form-group">
                    <label asp-for="Model!.ModifiedDate" class="control-label" for="@Model!.HtmlId(nameof(ProductDataModel.DefaultView.ModifiedDate))"></label>
                    @Html.DisplayFor(m=>m.Model!.ModifiedDate)
                </div>
            </div>
            <div class="card-footer">
                <div class="btn-group" role="group" aria-label="...">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Model!.ProductID" id="@Model.HtmlId(nameof(ProductDataModel.DefaultView.ProductID))" name="@Model.HtmlName(nameof(ProductDataModel.DefaultView.ProductID))"/>
                        <button class="btn btn-primary" role="button" type="submit" title="@localizor.Get("Delete")">
                            <span class="fa-solid fa-trash"></span><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Delete")</span>
                        </button>
                    </form>
                    <a asp-area="" asp-controller="Product" asp-action="Create" class="btn btn-secondary" role="button" title="@localizor.Get("Reset")">
                        <i class="fa-solid fa-refresh"></i><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Reset")</span>
                    </a>
                    <a asp-area="" asp-controller="Product" asp-action="Index" class="btn btn-secondary" role="button" title="@localizor.Get("Back_to_List")">
                        <i class="fa-solid fa-arrow-left"></i><span class="submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline">@localizor.Get("Back_to_List")</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
