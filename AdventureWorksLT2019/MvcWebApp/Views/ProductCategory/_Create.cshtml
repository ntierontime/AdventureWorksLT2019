@using Framework.Models;
@using AdventureWorksLT2019.Models.Definitions;
@using AdventureWorksLT2019.MvcWebApp.Models;
@using AdventureWorksLT2019.Models;
@using AdventureWorksLT2019.Resx;
@model MvcItemViewModel<ProductCategoryDataModel.DefaultView>
@inject SelectListHelper selectListHelper;
@inject IUIStrings localizor;
@{
    var format_Please_Select = localizor.Get("Format_Please_Select");
}
@if (Model.Status != System.Net.HttpStatusCode.OK)
{
    <div class="row">
        <div class="text-danger">@Model.StatusMessage</div>
    </div>
}
else
{
    <input class="nt-hidden-modal-title" value="@Model!.Model!.Name" type="hidden" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Model!.ParentProductCategoryID" class="control-label" for="@Model!.HtmlId(nameof(ProductCategoryDataModel.DefaultView.ParentProductCategoryID))"></label>
        <select asp-for="Model!.ParentProductCategoryID" class="form-control form-select nt-form-data"
            data-nt-value="@Model!.Model!.ParentProductCategoryID" id="@Model!.HtmlId(nameof(ProductCategoryDataModel.DefaultView.ParentProductCategoryID))"  name="@Model!.HtmlName(nameof(ProductCategoryDataModel.DefaultView.ParentProductCategoryID))">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Model!.Name" class="control-label" for="@Model!.HtmlId(nameof(ProductCategoryDataModel.DefaultView.Name))"></label>
        <input asp-for="Model!.Name" class="form-control nt-form-data" id="@Model!.HtmlId(nameof(ProductCategoryDataModel.DefaultView.Name))" name="@Model!.HtmlName(nameof(ProductCategoryDataModel.DefaultView.Name))" data-nt-value="@Model!.Model!.Name"/>
        <span asp-validation-for="Model!.Name" class="text-danger" data-valmsg-for="@Model!.HtmlName(nameof(ProductCategoryDataModel.DefaultView.Name))"></span>
    </div>
    <div class="form-group">
        <label asp-for="Model!.ModifiedDate" class="control-label" for="@Model!.HtmlId(nameof(ProductCategoryDataModel.DefaultView.ModifiedDate))"></label>
        <input asp-for="Model!.ModifiedDate" class="form-control nt-form-data" id="@Model!.HtmlId(nameof(ProductCategoryDataModel.DefaultView.ModifiedDate))" name="@Model!.HtmlName(nameof(ProductCategoryDataModel.DefaultView.ModifiedDate))" data-nt-value="@Model!.Model!.ModifiedDate"/>
        <span asp-validation-for="Model!.ModifiedDate" class="text-danger" data-valmsg-for="@Model!.HtmlName(nameof(ProductCategoryDataModel.DefaultView.ModifiedDate))"></span>
    </div>
}
