@using AdventureWorksLT2019.Models;
@using AdventureWorksLT2019.MvcWebApp.Models;
@using AdventureWorksLT2019.Resx;
@using Framework.Models;
@model ProductCategoryCompositeModel;
@inject ViewFeaturesManager viewFeatureManager;
@inject DashboardViewModelHelper dashboardViewModelHelper;
@inject MvcItemViewModelHelper mvcItemViewModelHelper;
@inject IUIStrings localizor;
@{
    ViewData["Title"] = localizor.Get("Dashboard");
    var routeId = Model.__Master__.ProductCategoryID;
    var masterVM = await dashboardViewModelHelper.GetProductCategoryMvcItemViewModel(Model.__Master__, Model.Get(ProductCategoryCompositeModel.__DataOptions__.__Master__));
}
<div class="row">
    <div class="col-12 col-md-8 nopadding">
        <ul class="nav nav-tabs" id="dashboardTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="lists-tab" data-bs-toggle="tab" data-bs-target="#lists" type="button" role="tab" aria-controls="lists" aria-selected="true"><i class="fa fa-list me-2"></i>@localizor.Get("Tab_Lists")</button>
            </li>
        </ul>
        <div class="tab-content" id="dashboardTabContent">
            <div class="tab-pane fade show active" id="lists" role="tabpanel" aria-labelledby="lists-tab">
                <div class="accordion" id="listsPanels">
                    @if (Model!.Responses.ContainsKey(ProductCategoryCompositeModel.__DataOptions__.Products_Via_ProductCategoryID))
                    {
                        var vm = await dashboardViewModelHelper.GetProductPagedSearchViewModel(new ProductAdvancedQuery { ProductCategoryID = Model.__Master__.ProductCategoryID }, Model.Products_Via_ProductCategoryID, Model.Get(ProductCategoryCompositeModel.__DataOptions__.Products_Via_ProductCategoryID));
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="panelsStayOpen-heading-products_Via_ProductCategoryID">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapse-products_Via_ProductCategoryID" aria-expanded="true" aria-controls="panelsStayOpen-products_Via_ProductCategoryID">
                                    @localizor.Get("Section_Products_Via_ProductCategoryID")
                                </button>
                            </h2>
                            <div id="panelsStayOpen-collapse-products_Via_ProductCategoryID" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-heading-products_Via_ProductCategoryID">
                                <form id="@vm.UIListSetting.UIListFeatures.SearchFormId" method="post" class="nt-ajax-partial-load-post-formdata"
                                    data-nt-partial-url="@Url.Action("AjaxLoadItems", "Product")"
                                    data-nt-updatetarget="#@vm.UIListSetting.UIListFeatures.ListWrapperId">
                                    <input type="hidden" value="@vm.Query.PageIndex" class="nt-page-index" name="PageIndex" />
                                    <input type="hidden" value="@vm.Query.PageSize" class="nt-page-size" name="PageSize" />
                                    <input type="hidden" value="@vm.Query.OrderBys" class="nt-order-by" name="OrderBys" />
                                    <input type="hidden" value="@vm.Query.PaginationOption" class="nt-pagination-option-field" name="PaginationOption" />
                                    <input type="hidden" value="@vm.UIListSetting.UIParams.AdvancedQuery" class="nt-advanced-query" name="AdvancedQuery" />
                                    <input type="hidden" value="@vm.UIListSetting.UIParams.PagedViewOption" class="nt-paged-view-option-field" name="PagedViewOption" />
                                    <input type="hidden" value="@vm.UIListSetting.UIParams.Template" class="nt-template-field" name="Template" />
                                    <!--this is the __Master__ Identifier-->
                                    <input type="hidden" value="@Model.__Master__.ProductCategoryID" name="ProductCategoryID" />
                                </form>
                                <div class="accordion-body p-0">
                                    @await Html.PartialAsync("~/Views/Product/_ListViewsContainer.cshtml",vm)
                                </div>
                            </div>
                        </div>
                    }
                    @if (Model!.Responses.ContainsKey(ProductCategoryCompositeModel.__DataOptions__.ProductCategories_Via_ParentProductCategoryID))
                    {
                        var vm = await dashboardViewModelHelper.GetProductCategoryPagedSearchViewModel(new ProductCategoryAdvancedQuery { ParentProductCategoryID = Model.__Master__.ProductCategoryID }, Model.ProductCategories_Via_ParentProductCategoryID, Model.Get(ProductCategoryCompositeModel.__DataOptions__.ProductCategories_Via_ParentProductCategoryID));
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="panelsStayOpen-heading-productCategories_Via_ParentProductCategoryID">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapse-productCategories_Via_ParentProductCategoryID" aria-expanded="true" aria-controls="panelsStayOpen-productCategories_Via_ParentProductCategoryID">
                                    @localizor.Get("Section_ProductCategories_Via_ParentProductCategoryID")
                                </button>
                            </h2>
                            <div id="panelsStayOpen-collapse-productCategories_Via_ParentProductCategoryID" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-heading-productCategories_Via_ParentProductCategoryID">
                                <form id="@vm.UIListSetting.UIListFeatures.SearchFormId" method="post" class="nt-ajax-partial-load-post-formdata"
                                    data-nt-partial-url="@Url.Action("AjaxLoadItems", "ProductCategory")"
                                    data-nt-updatetarget="#@vm.UIListSetting.UIListFeatures.ListWrapperId">
                                    <input type="hidden" value="@vm.Query.PageIndex" class="nt-page-index" name="PageIndex" />
                                    <input type="hidden" value="@vm.Query.PageSize" class="nt-page-size" name="PageSize" />
                                    <input type="hidden" value="@vm.Query.OrderBys" class="nt-order-by" name="OrderBys" />
                                    <input type="hidden" value="@vm.Query.PaginationOption" class="nt-pagination-option-field" name="PaginationOption" />
                                    <input type="hidden" value="@vm.UIListSetting.UIParams.AdvancedQuery" class="nt-advanced-query" name="AdvancedQuery" />
                                    <input type="hidden" value="@vm.UIListSetting.UIParams.PagedViewOption" class="nt-paged-view-option-field" name="PagedViewOption" />
                                    <input type="hidden" value="@vm.UIListSetting.UIParams.Template" class="nt-template-field" name="Template" />
                                    <!--this is the __Master__ Identifier-->
                                    <input type="hidden" value="@Model.__Master__.ProductCategoryID" name="ParentProductCategoryID" />
                                </form>
                                <div class="accordion-body p-0">
                                    @await Html.PartialAsync("~/Views/ProductCategory/_ListViewsContainer.cshtml",vm)
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-4 col-lg-3">
        <!-- ProductCategoryCompositeModel.__DataOptions__.__Master__ -->
        <div class="nt-list-wrapper"
             id="master"
             data-nt-bs-modalsize="Large"
             data-nt-loaditem-url="@Url.Action("AjaxLoadItem", "ProductCategory")"
             data-nt-createitem-url="@Url.Action("AjaxCreate", "ProductCategory")"
             data-nt-updateitem-url="@Url.Action("AjaxEdit", "ProductCategory")"
             data-nt-deleteitem-url="@Url.Action("AjaxDelete", "ProductCategory")">
            <div class="nt-listitem" data-nt-route-id="@routeId">
                @await Html.PartialAsync("~/Views/ProductCategory/_TileDetailsItem.cshtml", masterVM)
            </div>
        </div>
        <!-- ProductCategoryCompositeModel.__DataOptions__.__Master__ -->
    </div>
</div>
<partial name="~/Views/Shared/_CrudActionDialog.cshtml" />
<partial name="~/Views/Shared/_SimpleActionConfirmationDialog.cshtml" />
@section Scripts
    {
    <script>
        const searchFormId_Products_Via_ProductCategoryID = "Products_Via_ProductCategoryIDSearchForm";
        const listWrapperId_Products_Via_ProductCategoryID = "Products_Via_ProductCategoryIDListWrapper";
        const searchFormId_ProductCategories_Via_ParentProductCategoryID = "ProductCategories_Via_ParentProductCategoryIDSearchForm";
        const listWrapperId_ProductCategories_Via_ParentProductCategoryID = "ProductCategories_Via_ParentProductCategoryIDListWrapper";
        $(document).ready($(function () {
            documentReadyForSearchList(searchFormId_Products_Via_ProductCategoryID, listWrapperId_Products_Via_ProductCategoryID);
            documentReadyForSearchList(searchFormId_ProductCategories_Via_ParentProductCategoryID, listWrapperId_ProductCategories_Via_ParentProductCategoryID);
            documentReadyForPopups(true, true, true);
        }))
    </script>
}
