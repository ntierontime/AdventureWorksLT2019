@using Framework.Models;
@using AdventureWorksLT2019.Models.Definitions;
@using AdventureWorksLT2019.MvcWebApp.Models;
@using Framework.Mvc.Models;
@using AdventureWorksLT2019.Models;
@using AdventureWorksLT2019.Resx;
@model MvcItemViewModel<ProductCategoryDataModel.DefaultView>
@inject SelectListHelper selectListHelper;
@inject IUIStrings localizor;
@{
    ViewData["Title"] = localizor.Get("Details");
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h1>@localizor.Get("Details")</h1>
                <h4>@localizor.Get("ProductCategory")</h4>
            </div>
            @if (Model.Status != System.Net.HttpStatusCode.OK)
            {
                <div class="card-body">
                    <div class="text-danger">@Model.StatusMessage</div>
                </div>
            }
            else
            {
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Model!.ProductCategoryID" class="control-label" for="@Model!.HtmlId(nameof(ProductCategoryDataModel.DefaultView.ProductCategoryID))"></label>
                        <input asp-for="Model!.ProductCategoryID" readonly class="form-control " id="@Model!.HtmlId(nameof(ProductCategoryDataModel.DefaultView.ProductCategoryID))" name="@Model!.HtmlName(nameof(ProductCategoryDataModel.DefaultView.ProductCategoryID))" data-nt-value="@Model!.Model!.ProductCategoryID"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model!.ParentProductCategoryID" class="control-label" for="@Model!.HtmlId(nameof(ProductCategoryDataModel.DefaultView.ParentProductCategoryID))"></label>                    <div class="form-control" readonly>
                        <a asp-area="" asp-controller="ProductCategory" asp-action="Dashboard" asp-route-productcategoryid="@Model!.Model!.ParentProductCategoryID">@Model!.Model!.Parent_Name</a>
                    </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model!.Name" class="control-label" for="@Model!.HtmlId(nameof(ProductCategoryDataModel.DefaultView.Name))"></label>
                        <input asp-for="Model!.Name" readonly class="form-control " id="@Model!.HtmlId(nameof(ProductCategoryDataModel.DefaultView.Name))" name="@Model!.HtmlName(nameof(ProductCategoryDataModel.DefaultView.Name))" data-nt-value="@Model!.Model!.Name"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model!.rowguid" class="control-label" for="@Model!.HtmlId(nameof(ProductCategoryDataModel.DefaultView.rowguid))"></label>
                        <input asp-for="Model!.rowguid" readonly class="form-control " id="@Model!.HtmlId(nameof(ProductCategoryDataModel.DefaultView.rowguid))" name="@Model!.HtmlName(nameof(ProductCategoryDataModel.DefaultView.rowguid))" data-nt-value="@Model!.Model!.rowguid"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model!.ModifiedDate" class="control-label" for="@Model!.HtmlId(nameof(ProductCategoryDataModel.DefaultView.ModifiedDate))"></label>
                        <input asp-for="Model!.ModifiedDate" readonly class="form-control " id="@Model!.HtmlId(nameof(ProductCategoryDataModel.DefaultView.ModifiedDate))" name="@Model!.HtmlName(nameof(ProductCategoryDataModel.DefaultView.ModifiedDate))" data-nt-value="@Model!.Model!.ModifiedDate"/>
                    </div>
                </div>
            }
            <div class="card-footer">
                <div class="btn-group" role="group" aria-label="...">
                    <a asp-area="" asp-controller="ProductCategory" asp-action="Details" asp-route-productcategoryid="@Model!.Model!.ProductCategoryID" class="btn btn-secondary" role="button" title="@localizor.Get("Refresh")">
                        <i class="fa-solid fa-refresh"></i><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Refresh")</span>
                    </a>
                    @if (Model!.UIItemFeatures.PrimayEditViewContainer == CrudViewContainers.StandaloneView)
                    {
                        <a asp-area="" asp-controller="ProductCategory" asp-action="Edit" asp-route-productcategoryid="@Model!.Model!.ProductCategoryID" class="btn btn-default" role="button" title="@localizor.Get("Edit")">
                            <i class="fa fa-edit"></i><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Edit")</span>
                        </a>
                    }
                    @if (Model!.UIItemFeatures.PrimayDeleteViewContainer == CrudViewContainers.StandaloneView)
                    {
                        <a asp-area="" asp-controller="ProductCategory" asp-action="Delete" asp-route-productcategoryid="@Model!.Model!.ProductCategoryID" class="btn btn-default" role="button" title="@localizor.Get("Delete")">
                            <i class="fa fa-trash"></i><span class="nt-submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Delete")</span>
                        </a>
                    }
                    <a asp-area="" asp-controller="ProductCategory" asp-action="Index" class="btn btn-secondary" role="button" title="@localizor.Get("Back_to_List")">
                        <i class="fa-solid fa-arrow-left"></i><span class="submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline">@localizor.Get("Back_to_List")</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
