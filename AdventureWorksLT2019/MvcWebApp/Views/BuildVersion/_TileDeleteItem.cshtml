@using AdventureWorksLT2019.Resx;
@using AdventureWorksLT2019.MvcWebApp.Models;
@using AdventureWorksLT2019.Models;
@using Framework.Models;
@model MvcItemViewModel<BuildVersionDataModel>
@inject IUIStrings localizor;
<div class="card w-100@(Model.IsCurrentItem ? " border-warning border-3": "")">
    <div class="card-header">
        <h5 class="card-title">@Model.Model?.Database_Version</h5>
        @*<p class="card-text">Please Customize sub-title</p>*@
    </div>
    <div class="card-body d-flex flex-column">
        @await Html.PartialAsync("~/Views/BuildVersion/_Delete.cshtml", Model)
    </div>
    <div class="card-footer text-muted btn-toolbar">
        <div class="btn-group btn-group-nt-action-save">
            <button type="button" class="btn btn-secondary btn-nt-action-cancel" data-nt-action="@HttpMethods.Delete">
                <i class="fa-solid fa-circle-xmark"></i>
            </button>
            <button type="button" class="btn btn-primary btn-nt-action" data-nt-action="@HttpMethods.Delete"
                data-nt-container="@CrudViewContainers.Inline.ToString()"
                data-nt-template="@ViewItemTemplateNames.Delete.ToString()">
                <i class="fa-solid fa-check-circle"></i>
            </button>
        </div>
    </div>
</div>
