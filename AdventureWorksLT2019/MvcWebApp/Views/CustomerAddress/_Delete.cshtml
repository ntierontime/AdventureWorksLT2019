@using Framework.Common;
@using AdventureWorksLT2019.Models.Definitions;
@using AdventureWorksLT2019.MvcWebApp.Models;
@using Framework.Mvc.Models;
@using AdventureWorksLT2019.Models;
@using AdventureWorksLT2019.Resx;
@model MvcItemViewModel<CustomerAddressDataModel.DefaultView>
@inject SelectListHelper selectListHelper;
@inject IUIStrings localizor;
@{
    var format_Please_Select = localizor.Get("Format_Please_Select");
}
@if (Model.Status != System.Net.HttpStatusCode.OK)
{
    <div class="row">
        <div class="text-danger">@Model.StatusMessage</div>
    </div>
}
else
{
    <input class="nt-hidden-modal-title" value="@Model!.Model!.AddressType" type="hidden" />
    <div class="form-group">
        <label asp-for="Model!.CustomerID" class="control-label" for="@Model!.HtmlId(nameof(CustomerAddressDataModel.DefaultView.CustomerID))"></label>    <div class="form-control" readonly>
        <a asp-area="" asp-controller="Customer" asp-action="Dashboard" asp-route-customerid="@Model!.Model!.CustomerID">@Model!.Model!.Customer_Name</a>
    </div>
    </div>
    <div class="form-group">
        <label asp-for="Model!.AddressID" class="control-label" for="@Model!.HtmlId(nameof(CustomerAddressDataModel.DefaultView.AddressID))"></label>    <div class="form-control" readonly>
        <a asp-area="" asp-controller="Address" asp-action="Dashboard" asp-route-addressid="@Model!.Model!.AddressID">@Model!.Model!.Address_Name</a>
    </div>
    </div>
    <div class="form-group">
        <label asp-for="Model!.AddressType" class="control-label" for="@Model!.HtmlId(nameof(CustomerAddressDataModel.DefaultView.AddressType))"></label>
        <input asp-for="Model!.AddressType" readonly class="form-control " id="@Model!.HtmlId(nameof(CustomerAddressDataModel.DefaultView.AddressType))" name="@Model!.HtmlName(nameof(CustomerAddressDataModel.DefaultView.AddressType))" data-nt-value="@Model!.Model!.AddressType"/>
    </div>
    <div class="form-group">
        <label asp-for="Model!.rowguid" class="control-label" for="@Model!.HtmlId(nameof(CustomerAddressDataModel.DefaultView.rowguid))"></label>
        <input asp-for="Model!.rowguid" readonly class="form-control " id="@Model!.HtmlId(nameof(CustomerAddressDataModel.DefaultView.rowguid))" name="@Model!.HtmlName(nameof(CustomerAddressDataModel.DefaultView.rowguid))" data-nt-value="@Model!.Model!.rowguid"/>
    </div>
    <div class="form-group">
        <label asp-for="Model!.ModifiedDate" class="control-label" for="@Model!.HtmlId(nameof(CustomerAddressDataModel.DefaultView.ModifiedDate))"></label>
        <input asp-for="Model!.ModifiedDate" readonly class="form-control " id="@Model!.HtmlId(nameof(CustomerAddressDataModel.DefaultView.ModifiedDate))" name="@Model!.HtmlName(nameof(CustomerAddressDataModel.DefaultView.ModifiedDate))" data-nt-value="@Model!.Model!.ModifiedDate"/>
    </div>
}
