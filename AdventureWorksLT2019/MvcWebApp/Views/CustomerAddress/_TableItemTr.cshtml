@using AdventureWorksLT2019.Resx;
@using AdventureWorksLT2019.MvcWebApp.Models;
@using Framework.Models;
@using AdventureWorksLT2019.Models;
@model MvcItemViewModel<CustomerAddressDataModel.DefaultView>
@inject IUIStrings localizor;
@{
    var routeId = Model.Model?.CustomerID + "/" + Model.Model?.AddressID;
}
<tr class="pt-0 pb-0 nt-listitem@(Model.IsCurrentItem ? " nt-created border-warning border-3": "")" data-nt-route-id="@routeId">
    @if (Model.Template == ViewItemTemplateNames.Details.ToString())
    {
        @await Html.PartialAsync("~/Views/CustomerAddress/_TableDetailsItem.cshtml", Model)
    }
    else if (Model.Template == ViewItemTemplateNames.Edit.ToString())
    {
        @await Html.PartialAsync("~/Views/CustomerAddress/_TableEditItem.cshtml", Model)
    }
    else if (Model.Template == ViewItemTemplateNames.Create.ToString())
    {
        @await Html.PartialAsync("~/Views/CustomerAddress/_TableCreateItem.cshtml", Model)
    }
</tr>
