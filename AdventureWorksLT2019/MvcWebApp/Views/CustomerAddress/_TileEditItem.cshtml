@using AdventureWorksLT2019.Resx;
@using Framework.Mvc.Models;
@using AdventureWorksLT2019.Models;
@using Framework.Models;
@model MvcItemViewModel<CustomerAddressDataModel.DefaultView>
@inject IUIStrings localizor;
<div class="card w-100@(Model.IsCurrentItem ? " border-warning border-3": "")">
    <div class="card-header">
        <h5 class="card-title">@Model!.Model!.AddressType</h5>
        @*<p class="card-text">Please Customize sub-title</p>*@
    </div>
    <form>
        <div class="card-body d-flex flex-column">
            @await Html.PartialAsync("~/Views/CustomerAddress/_Edit.cshtml", Model)
        </div>
        <div class="card-footer text-muted btn-toolbar">
            <div class="btn-group btn-group-nt-action-save">
                <button type="button" class="btn btn-secondary btn-nt-action-cancel" data-nt-action="@HttpMethods.Put">
                    <i class="fa-solid fa-circle-xmark"></i><span class="submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Cancel")</span>
                </button>
                <button type="button" class="btn btn-primary btn-nt-action" data-nt-action="@HttpMethods.Put"
                    data-nt-container="@CrudViewContainers.Inline.ToString()"
                    data-nt-template="@ViewItemTemplates.Edit.ToString()">
                    <i class="fa-solid fa-check-circle"></i><span class="submit-text hidden-xs hidden-sm visible-md-inline visible-lg-inline ms-1">@localizor.Get("Save")</span>
                </button>
            </div>
        </div>
    </form>
</div>
