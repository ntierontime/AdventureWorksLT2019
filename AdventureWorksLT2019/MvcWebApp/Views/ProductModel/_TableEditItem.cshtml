@using Framework.Models;
@using AdventureWorksLT2019.Models;
@using AdventureWorksLT2019.Resx;
@using AdventureWorksLT2019.MvcWebApp.Models;
@using Framework.Mvc.Models;
@using AdventureWorksLT2019.Models.Definitions;
@model MvcItemViewModel<ProductModelDataModel>
@inject SelectListHelper selectListHelper;
@inject IUIStrings localizor;
@{
    var format_Please_Select = localizor.Get("Format_Please_Select");
}
@if (Model!.UIItemFeatures.ShowItemButtons)
{
    <td class="p-0" style="width: 1% !important;">
    <div class="btn-group btn-group-nt-action-save">
        <button type="button" class="btn btn-secondary btn-nt-action-cancel" data-nt-action="@HttpMethods.Put">
            <i class="fa-solid fa-circle-xmark"></i>
        </button>
        <button type="button" class="btn btn-primary btn-nt-action" data-nt-action="@HttpMethods.Put"
            data-nt-container="@CrudViewContainers.Inline.ToString()"
            data-nt-template="@ViewItemTemplates.Edit.ToString()">
            <i class="fa-solid fa-check-circle"></i>
        </button>
    </div>
    </td>
}
<td class="form-group p-0">
    <input asp-for="Model!.ProductModelID" readonly class="form-control " id="@Model!.HtmlId(nameof(ProductModelDataModel.ProductModelID))" name="@Model!.HtmlName(nameof(ProductModelDataModel.ProductModelID))" data-nt-value="@Model!.Model!.ProductModelID"/>
</td>
<td class="form-group p-0">
    <input asp-for="Model!.Name" class="form-control nt-form-data" id="@Model!.HtmlId(nameof(ProductModelDataModel.Name))" name="@Model!.HtmlName(nameof(ProductModelDataModel.Name))" data-nt-value="@Model!.Model!.Name"/>
    <span asp-validation-for="Model!.Name" class="text-danger" data-valmsg-for="@Model!.HtmlName(nameof(ProductModelDataModel.Name))"></span>
</td>
<td class="form-group p-0">
    <input asp-for="Model!.CatalogDescription" class="form-control nt-form-data" id="@Model!.HtmlId(nameof(ProductModelDataModel.CatalogDescription))" name="@Model!.HtmlName(nameof(ProductModelDataModel.CatalogDescription))" data-nt-value="@Model!.Model!.CatalogDescription"/>
</td>
<td class="form-group p-0">
    <input asp-for="Model!.rowguid" readonly class="form-control " id="@Model!.HtmlId(nameof(ProductModelDataModel.rowguid))" name="@Model!.HtmlName(nameof(ProductModelDataModel.rowguid))" data-nt-value="@Model!.Model!.rowguid"/>
</td>
<td class="form-group p-0">
    <input asp-for="Model!.ModifiedDate" class="form-control nt-form-data" id="@Model!.HtmlId(nameof(ProductModelDataModel.ModifiedDate))" name="@Model!.HtmlName(nameof(ProductModelDataModel.ModifiedDate))" data-nt-value="@Model!.Model!.ModifiedDate"/>
    <span asp-validation-for="Model!.ModifiedDate" class="text-danger" data-valmsg-for="@Model!.HtmlName(nameof(ProductModelDataModel.ModifiedDate))"></span>
</td>
@if (Model!.UIItemFeatures.ShowItemUIStatus)
{
    <td class="form-group nt-item-status text-center" style="width: 1% !important;">
        @if (Model!.Model!.ItemUIStatus______ == ItemUIStatus.NoChange)
        {
                <i class="fa-solid fa-circle-notch text-success"></i>
        }
        else if (Model!.Model!.ItemUIStatus______ == ItemUIStatus.Updated) // Usually: will be changed by JQuery
        {
                <i class="fa-solid fa-circle text-danger"></i>
        }
        else // ItemUIStatus.New
        {
                    <i class="fa-solid fa-circle text-danger"></i>
        }
        <input asp-for="Model!.ItemUIStatus______" class="form-control" data-nt-value="@Model!.Model!.ItemUIStatus______" id="@Model!.HtmlId(nameof(ProductModelDataModel.ItemUIStatus______))" name="@Model!.HtmlName(nameof(ProductModelDataModel.ItemUIStatus______))" type="hidden" />
    </td>
}
@if (Model!.UIItemFeatures.ShowEditableListDeleteSelect)
{
    <td class="form-group nt-editablelist-delete-select text-center" style="width: 1% !important;">
        <input asp-for="Model!.IsDeleted______" class="form-check-input nt-form-check ms-1" type="checkbox"  id="@Model!.HtmlId(nameof(ProductModelDataModel.IsDeleted______))" name="@Model!.HtmlName(nameof(ProductModelDataModel.IsDeleted______))" data-nt-value="@Model!.Model!.IsDeleted______"/>
    </td>
}
