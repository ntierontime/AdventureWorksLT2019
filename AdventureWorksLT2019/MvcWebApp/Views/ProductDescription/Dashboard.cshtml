@using AdventureWorksLT2019.Models;
@using AdventureWorksLT2019.MvcWebApp.Models;
@using AdventureWorksLT2019.Resx;
@using Framework.Models;
@model ProductDescriptionCompositeModel;
@inject ViewFeaturesManager viewFeatureManager;
@inject DashboardViewModelHelper dashboardViewModelHelper;
@inject MvcItemViewModelHelper mvcItemViewModelHelper;
@inject IUIStrings localizor;
@{
    ViewData["Title"] = localizor.Get("Dashboard");
    var routeId = Model.__Master__.ProductDescriptionID;
    var masterVM = await dashboardViewModelHelper.GetProductDescriptionMvcItemViewModel(Model.__Master__, Model.Get(ProductDescriptionCompositeModel.__DataOptions__.__Master__));
}
<div class="row">
    <div class="col-12 col-md-8 nopadding">
        <ul class="nav nav-tabs" id="dashboardTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="lists-tab" data-bs-toggle="tab" data-bs-target="#lists" type="button" role="tab" aria-controls="lists" aria-selected="true"><i class="fa fa-list me-2"></i>@localizor.Get("Tab_Lists")</button>
            </li>
        </ul>
        <div class="tab-content" id="dashboardTabContent">
            <div class="tab-pane fade show active" id="lists" role="tabpanel" aria-labelledby="lists-tab">
                <div class="accordion" id="listsPanels">
                    @if (Model!.Responses.ContainsKey(ProductDescriptionCompositeModel.__DataOptions__.ProductModelProductDescriptions_Via_ProductDescriptionID))
                    {
                        var vm = await dashboardViewModelHelper.GetProductModelProductDescriptionPagedSearchViewModel(new ProductModelProductDescriptionAdvancedQuery { ProductDescriptionID = Model.__Master__.ProductDescriptionID }, Model.ProductModelProductDescriptions_Via_ProductDescriptionID, Model.Get(ProductDescriptionCompositeModel.__DataOptions__.ProductModelProductDescriptions_Via_ProductDescriptionID));
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="panelsStayOpen-heading-productModelProductDescriptions_Via_ProductDescriptionID">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapse-productModelProductDescriptions_Via_ProductDescriptionID" aria-expanded="true" aria-controls="panelsStayOpen-productModelProductDescriptions_Via_ProductDescriptionID">
                                    @localizor.Get("Section_ProductModelProductDescriptions_Via_ProductDescriptionID")
                                </button>
                            </h2>
                            <div id="panelsStayOpen-collapse-productModelProductDescriptions_Via_ProductDescriptionID" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-heading-productModelProductDescriptions_Via_ProductDescriptionID">
                                <form id="@vm.UIListSetting.UIListFeatures.SearchFormId" method="post" class="nt-ajax-partial-load-post-formdata"
                                    data-nt-partial-url="@Url.Action("AjaxLoadItems", "ProductModelProductDescription")"
                                    data-nt-updatetarget="#@vm.UIListSetting.UIListFeatures.ListWrapperId">
                                    <input type="hidden" value="@vm.Query.PageIndex" class="nt-page-index" name="PageIndex" />
                                    <input type="hidden" value="@vm.Query.PageSize" class="nt-page-size" name="PageSize" />
                                    <input type="hidden" value="@vm.Query.OrderBys" class="nt-order-by" name="OrderBys" />
                                    <input type="hidden" value="@vm.Query.PaginationOption" class="nt-pagination-option-field" name="PaginationOption" />
                                    <input type="hidden" value="@vm.UIListSetting.UIParams.AdvancedQuery" class="nt-advanced-query" name="AdvancedQuery" />
                                    <input type="hidden" value="@vm.UIListSetting.UIParams.PagedViewOption" class="nt-paged-view-option-field" name="PagedViewOption" />
                                    <input type="hidden" value="@vm.UIListSetting.UIParams.Template" class="nt-template-field" name="Template" />
                                    <!--this is the __Master__ Identifier-->
                                    <input type="hidden" value="@Model.__Master__.ProductDescriptionID" name="ProductDescriptionID" />
                                </form>
                                <div class="accordion-body p-0">
                                    @await Html.PartialAsync("~/Views/ProductModelProductDescription/_ListViewsContainer.cshtml",vm)
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="col-12 col-md-4 col-lg-3">
        <!-- ProductDescriptionCompositeModel.__DataOptions__.__Master__ -->
        <div class="nt-list-wrapper"
             id="master"
             data-nt-bs-modalsize="Large"
             data-nt-loaditem-url="@Url.Action("AjaxLoadItem", "ProductDescription")"
             data-nt-createitem-url="@Url.Action("AjaxCreate", "ProductDescription")"
             data-nt-updateitem-url="@Url.Action("AjaxEdit", "ProductDescription")"
             data-nt-deleteitem-url="@Url.Action("AjaxDelete", "ProductDescription")">
            <div class="nt-listitem" data-nt-route-id="@routeId">
                @await Html.PartialAsync("~/Views/ProductDescription/_TileDetailsItem.cshtml", masterVM)
            </div>
        </div>
        <!-- ProductDescriptionCompositeModel.__DataOptions__.__Master__ -->
    </div>
</div>
<partial name="~/Views/Shared/_CrudActionDialog.cshtml" />
<partial name="~/Views/Shared/_SimpleActionConfirmationDialog.cshtml" />
@section Scripts
    {
    <script>
        const searchFormId_ProductModelProductDescriptions_Via_ProductDescriptionID = "ProductModelProductDescriptions_Via_ProductDescriptionIDSearchForm";
        const listWrapperId_ProductModelProductDescriptions_Via_ProductDescriptionID = "ProductModelProductDescriptions_Via_ProductDescriptionIDListWrapper";
        $(document).ready($(function () {
            documentReadyForSearchList(searchFormId_ProductModelProductDescriptions_Via_ProductDescriptionID, listWrapperId_ProductModelProductDescriptions_Via_ProductDescriptionID);
        }))
    </script>
}
