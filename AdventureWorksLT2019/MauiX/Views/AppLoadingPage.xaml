<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:fvmg="clr-namespace:Framework.MauiX.ViewModels;assembly=Framework.MauiX"
             xmlns:vmc="clr-namespace:AdventureWorksLT2019.MauiX.ViewModels;assembly=AdventureWorksLT2019.MauiX"
             x:Class="AdventureWorksLT2019.MauiX.Views.AppLoadingPage"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             NavigationPage.HasNavigationBar="false"
             Visual="Material"
             Title="EmptyPage">
    <ContentPage.Resources>
        <fvmg:ViewModelLocator x:Key="LocatorG" />
        <vmc:ViewModelLocator x:Key="LocatorC" />
    </ContentPage.Resources>
    <ContentPage.Content>
        <Grid>
            <Image Source="ntierontime_logo.png"  HorizontalOptions="Fill" VerticalOptions="FillAndExpand"/>
            <ProgressBar BindingContext="{Binding Path=ProgressBarVM, Source={StaticResource LocatorG}}"
                Progress="{Binding Path=Progress}" Scale="{Binding Path=Scale}" VerticalOptions="End" HorizontalOptions="CenterAndExpand" Margin="0,0,0,50" />
            <!--<fxc:PopupMessage IsVisible="{Binding PopupVM.PopupOption, Source={StaticResource Locator}, Converter={StaticResource StringEqualsConverter}, ConverterParameter=RegularPopup}" />-->
        </Grid>
    </ContentPage.Content>
</ContentPage>